{
    "name": "php-http/curl-client",
    "description": "cURL client for PHP-HTTP",
    "license": "MIT",
    "keywords": ["http", "curl"],
    "homepage": "http://php-http.org",
    "authors": [
        {
            "name": "Михаил Красильников",
            "email": "m.krasilnikov@yandex.ru"
        }
    ],
    "require": {
        "php": ">=5.5",
        "ext-curl": "*",
        "php-http/httplug": "^1.0.0-alpha3",
        "php-http/message-factory": "^1.0"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.0",
        "php-http/adapter-integration-tests": "dev-master#48e5c0ee7b19772ab00060498f91886268b945c4",
        "php-http/discovery": "^0.4",
        "php-http/utils": "^0.2",
        "phpunit/phpunit": "^4.8@stable",
        "zendframework/zend-diactoros": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Http\\Client\\Curl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Http\\Client\\Curl\\Tests\\": "tests/"
        }
    },
    "provide": {
        "php-http/client-implementation": "1.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-clover build/coverage.xml"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
